{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block stylesheets %}

{% endblock %}
{% block body %}

    <h1 class="titreprincipal">Article</h1>

    <table class="table">
        <head>


        </head>
        <body>
        {% for article in articles %}
            <div class="containerArticle">


            <div class="titre">{{ article.title }}</div>
            <div><img src="/image/{{ article.image }}"></div>

            <div class="contentt">{{ article.content }}</div>
            <div>{{ article.date ? article.date|date('Y-m-d H:i:s') : '' }}</div>

                <div class="allBut">

                    <div class="englobBut"><a class="but"
                                              href="{{ path('article_show', {'id': article.id}) }}">show</a>
                    </div>

            {% if is_granted('ROLE_ADMIN') %}
                    <div class="englobBut"><a class="but"
                                              href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                    </div>
                    <div class="englobBut"><a class="but"
                                              href="{{ path('article_delete', {'id': article.id}) }}">delete</a>
                    </div>

                    </div>
                </div>

            {% endif %}
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </body>
    </table>

    <a class="but" href="{{ path('article_new') }}">Create new</a>
{% endblock %}
